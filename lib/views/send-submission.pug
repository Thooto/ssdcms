include templates/navigation.pug

doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title Conference Management System
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel="stylesheet" href="/style.min.css")
  body
    +cmsnav("Send submission page")
    
    main
      h3 Send a submission
      form(action="/send-submission" enctype="multipart/form-data" method="post")
        input(name="title" placeholder="Title" value=submission.title required)
        textarea(name="abstract" value=submission.abstract placeholder="Abstract" required)= submission.title
        button(type="button" onclick="addAuthor()") Add author
        div#authors
        input(name="attachment" type="file" required)
        input(type="submit" value="Send submission")
          
      div(style="display: none;")
        div#author
          input(name="authors[names]" placeholder="Author name" required)
          input(name="authors[emails]" type="email" placeholder="Author email" required)
          input(name="authors[affiliations]" placeholder="Author affiliation" required)
            
      script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js")
      script.
        function addAuthor() {
          $('#author').clone().appendTo('#authors')
        }
